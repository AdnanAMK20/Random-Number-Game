    }                                   
void generateRandom()
 { 
     int a,b,c=0;
    int selectedItem= jComboBox1.getSelectedIndex();
        switch (selectedItem) {
            case 0:
                c=r.nextInt(2);
                break;
            case 1:
                c=r.nextInt(4);
                break;
            case 2:
                c=r.nextInt(6);
                break;
            default:
                break;
        }
switch (c) {
            case 0:
                jTextFieldOperation.setText("+");
                break;
            case 1:
                jTextFieldOperation.setText("-");
                break;
            case 2:
                jTextFieldOperation.setText("*");
                break;
            case 3:
                jTextFieldOperation.setText("/");
                break;
                    case 4:
                jTextFieldOperation.setText("%");
                break;
            default:
                break;
        }
     a=r.nextInt(10);
     b=r.nextInt(5);
     jLabel8.setText(a+"");
     jLabel9.setText(b+"");
 
             }
void check()
{
     int result,Cresult;
     String operations;
     
    
     operations =jTextFieldOperation.getText();
  switch(operations)
    {
        case "+":
        {
          int fn=Integer.parseInt(jLabel8.getText());
          int sn=Integer.parseInt(jLabel9.getText());
          Cresult=fn+sn;
          result=Integer.parseInt(jTextFieldAnswer.getText());
          if(Cresult==result)
          { jLabel6.setText("Correct");
          jLabel6.setForeground(Color.green);
          score++;
          }
          else 
          { jLabel12.setText("Incorrect");
          jLabel12.setForeground(Color.red);
          }
          break;
        }
        case "-":
        {
          int ffn=Integer.parseInt(jLabel8.getText());
          int ssn=Integer.parseInt(jLabel9.getText());
          Cresult=ffn-ssn;
          result=Integer.parseInt(jTextFieldAnswer.getText());
          if(Cresult==result)
          {jLabel6.setText("Correct");
          jLabel6.setForeground(Color.green);
          score++; 
          }
          else 
          {jLabel12.setText("Incorrect");
          jLabel12.setForeground(Color.red);
          }
          break;
        }
        case "*":
        {
          int fffn=Integer.parseInt(jLabel8.getText());
          int sssn=Integer.parseInt(jLabel9.getText());
          Cresult=fffn*sssn;
          result=Integer.parseInt(jTextFieldAnswer.getText());
          if(Cresult==result)
          { jLabel6.setText("Correct");
          jLabel6.setForeground(Color.green);
          score++;
          }
          else 
          {jLabel12.setText("Incorrect");
          jLabel12.setForeground(Color.red);
          }
           break;
        }
        case "/":
        {
          float fn=Float.parseFloat(jLabel8.getText());
          float sn=Float.parseFloat(jLabel9.getText());
          Float fresult=fn/sn;
           float dresult=Float.parseFloat(jTextFieldAnswer.getText());
          if(fresult==dresult)
          {  jLabel6.setText("Correct");
          jLabel6.setForeground(Color.green);
          score++;
          }
          else 
          {jLabel12.setText("Incorrect");
          jLabel12.setForeground(Color.red);
          }
          break;
        }
        case "%":
        {
          int fn=Integer.parseInt(jLabel8.getText());
          int sn=Integer.parseInt(jLabel9.getText());
          Cresult=fn%sn;
          result=Integer.parseInt(jTextFieldAnswer.getText());
          if(Cresult==result)
          { jLabel6.setText("Correct");
          jLabel6.setForeground(Color.green);
          score++;
          }
          else 
          {jLabel12.setText("Incorrect");
          jLabel12.setForeground(Color.red);
          }
        }
    }
}
void next()
{
    generateRandom();
    jTextFieldAnswer.setText(null);
    jLabel6.setText(null);
    jLabel12.setText(null);
}
